---
import { siteConfig } from "../config";

const hasProjects = siteConfig.projects && siteConfig.projects.length > 0;
const hasExperience = siteConfig.experience && siteConfig.experience.length > 0;
const hasEducation = siteConfig.education && siteConfig.education.length > 0;
const hasResume = siteConfig.resume;
---

<div class="filesystem-nav md:hidden">
  <div class="terminal-window">
    <div class="terminal-header">
      <div class="terminal-buttons">
        <div class="terminal-btn close"></div>
        <div class="terminal-btn minimize"></div>
        <div class="terminal-btn maximize"></div>
      </div>
      <div class="terminal-title">portfolio@ryandielhenn:~$</div>
    </div>
    <div class="terminal-body">
      <div class="terminal-content">
        <div class="terminal-line">
          <span class="prompt">portfolio@ryandielhenn:~$</span>
          <span class="command">ls -la</span>
        </div>
        <div class="terminal-output">
          <div class="file-item" data-path="/about">
            <span class="file-type">drwxr-xr-x</span>
            <span class="file-size">2.1K</span>
            <span class="file-date">Dec 15</span>
            <span class="file-name about">about/</span>
          </div>
          {hasExperience && (
            <div class="file-item" data-path="/experience">
              <span class="file-type">drwxr-xr-x</span>
              <span class="file-size">4.2K</span>
              <span class="file-date">Dec 15</span>
              <span class="file-name experience">experience/</span>
            </div>
          )}
          {hasProjects && (
            <div class="file-item" data-path="/projects">
              <span class="file-type">drwxr-xr-x</span>
              <span class="file-size">3.8K</span>
              <span class="file-date">Dec 15</span>
              <span class="file-name projects">projects/</span>
            </div>
          )}
          {hasEducation && (
            <div class="file-item" data-path="/education">
              <span class="file-type">drwxr-xr-x</span>
              <span class="file-size">1.9K</span>
              <span class="file-date">Dec 15</span>
              <span class="file-name education">education/</span>
            </div>
          )}
          {hasResume && (
            <div class="file-item" data-path="resume" data-resume-url={siteConfig.resume}>
              <span class="file-type">-rw-r--r--</span>
              <span class="file-size">245K</span>
              <span class="file-date">Dec 15</span>
              <span class="file-name resume">resume.pdf</span>
            </div>
          )}
          <div class="file-item social-links">
            <span class="file-type">lrwxrwxrwx</span>
            <span class="file-size">-</span>
            <span class="file-date">Dec 15</span>
            <span class="file-name social">social/</span>
            <div class="social-icons">
              {siteConfig.social?.email && (
                <a href={`mailto:${siteConfig.social.email}`} class="social-link" aria-label="Email">
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z" />
                    <polyline points="22,6 12,13 2,6" />
                  </svg>
                </a>
              )}
              {siteConfig.social?.linkedin && (
                <a href={siteConfig.social.linkedin} target="_blank" rel="noopener noreferrer" class="social-link" aria-label="LinkedIn">
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z" />
                    <rect x="2" y="9" width="4" height="12" />
                    <circle cx="4" cy="4" r="2" />
                  </svg>
                </a>
              )}
              {siteConfig.social?.github && (
                <a href={siteConfig.social.github} target="_blank" rel="noopener noreferrer" class="social-link" aria-label="GitHub">
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-1.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22" />
                  </svg>
                </a>
              )}
            </div>
          </div>
        </div>
        <div class="terminal-line">
          <span class="prompt">portfolio@ryandielhenn:~$</span>
          <span class="cursor">_</span>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .filesystem-nav {
    padding: 1rem;
    max-width: 100%;
  }

  .nav-button {
    display: block;
    padding: 1.25rem 1.5rem;
    background: rgba(31, 41, 55, 0.8);
    border: 2px solid rgba(59, 130, 246, 0.3);
    border-radius: 16px;
    text-decoration: none;
    color: #e5e7eb;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
    backdrop-filter: blur(8px);
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
    min-height: 80px;
    display: flex;
    align-items: center;
    justify-content: center;
  }


  .nav-button::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(59, 130, 246, 0.1), transparent);
    transition: left 0.5s ease;
  }

  .nav-button:hover::before {
    left: 100%;
  }

  .nav-button:hover {
    transform: translateY(-4px) scale(1.02);
    border-color: rgba(59, 130, 246, 0.6);
    background: rgba(31, 41, 55, 0.95);
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04), 0 0 20px rgba(59, 130, 246, 0.3);
  }

  .nav-button:active {
    transform: translateY(-2px) scale(1.01);
  }

  .nav-button-content {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    position: relative;
    z-index: 1;
    width: 100%;
    justify-content: center;
  }


  .nav-icon {
    width: 24px;
    height: 24px;
    flex-shrink: 0;
    color: #3b82f6;
    transition: all 0.3s ease;
  }

  .nav-text {
    font-size: 1.125rem;
    font-weight: 600;
    font-family: 'IBM Plex Mono', monospace;
    letter-spacing: -0.025em;
    transition: color 0.3s ease;
  }

  .nav-button:hover .nav-icon {
    color: #60a5fa;
    transform: scale(1.1);
  }

  .nav-button:hover .nav-text {
    color: #f3f4f6;
  }

  /* Animation for button appearance */
  .nav-button {
    opacity: 0;
    transform: translateY(20px);
    animation: slideInUp 0.6s ease-out forwards;
  }

  .nav-button:nth-child(1) { animation-delay: 0.1s; }
  .nav-button:nth-child(2) { animation-delay: 0.2s; }
  .nav-button:nth-child(3) { animation-delay: 0.3s; }
  .nav-button:nth-child(4) { animation-delay: 0.4s; }

  @keyframes slideInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Resume button special styling */
  .resume-button {
    border-color: rgba(59, 130, 246, 0.4);
    background: rgba(31, 41, 55, 0.9);
  }
  
  .resume-button:hover {
    border-color: rgba(59, 130, 246, 0.7);
    background: rgba(31, 41, 55, 1);
  }
  
  .download-button {
    border-color: rgba(34, 197, 94, 0.4);
    background: rgba(31, 41, 55, 0.9);
  }
  
  .download-button:hover {
    border-color: rgba(34, 197, 94, 0.7);
    background: rgba(31, 41, 55, 1);
  }
  
  .download-button .nav-icon {
    color: #22c55e;
  }
  
  .download-button:hover .nav-icon {
    color: #4ade80;
  }

  /* Touch feedback for mobile */
  @media (hover: none) and (pointer: coarse) {
    .nav-button:active {
      transform: scale(0.98);
      background: rgba(31, 41, 55, 1);
    }
  }

  /* Terminal Styles */
  .terminal-window {
    background: #1a1a1a;
    border-radius: 8px;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
    overflow: hidden;
    font-family: 'IBM Plex Mono', monospace;
    border: 1px solid #333;
  }

  .terminal-header {
    background: #2d2d2d;
    padding: 0.5rem 1rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
    border-bottom: 1px solid #333;
  }

  .terminal-buttons {
    display: flex;
    gap: 0.5rem;
  }

  .terminal-btn {
    width: 12px;
    height: 12px;
    border-radius: 50%;
  }

  .terminal-btn.close { background: #ff5f56; }
  .terminal-btn.minimize { background: #ffbd2e; }
  .terminal-btn.maximize { background: #27ca3f; }

  .terminal-title {
    color: #888;
    font-size: 0.875rem;
    font-weight: 500;
  }

  .terminal-body {
    background: #1a1a1a;
    padding: 1rem;
    min-height: 300px;
  }

  .terminal-content {
    color: #e5e7eb;
    font-size: 0.875rem;
    line-height: 1.5;
  }

  .terminal-line {
    margin-bottom: 0.5rem;
    display: flex;
    align-items: center;
    flex-wrap: wrap;
  }

  .prompt {
    color: #22c55e;
    font-weight: 600;
    margin-right: 0.5rem;
  }

  .command {
    color: #60a5fa;
    font-weight: 500;
  }

  .cursor {
    color: #22c55e;
    animation: blink 1s infinite;
  }

  @keyframes blink {
    0%, 50% { opacity: 1; }
    51%, 100% { opacity: 0; }
  }

  .terminal-output {
    margin: 1rem 0;
  }

  .file-item {
    display: flex;
    align-items: center;
    padding: 0.25rem 0;
    cursor: pointer;
    border-radius: 4px;
    transition: all 0.2s ease;
    margin-bottom: 0.25rem;
  }

  .file-item:hover {
    background: rgba(59, 130, 246, 0.1);
    transform: translateX(4px);
  }

  .file-type {
    color: #888;
    width: 80px;
    font-size: 0.75rem;
    margin-right: 1rem;
  }

  .file-size {
    color: #888;
    width: 50px;
    font-size: 0.75rem;
    margin-right: 1rem;
    text-align: right;
  }

  .file-date {
    color: #888;
    width: 60px;
    font-size: 0.75rem;
    margin-right: 1rem;
  }

  .file-name {
    color: #e5e7eb;
    font-weight: 500;
    flex: 1;
  }

  .file-name.about { color: #3b82f6; }
  .file-name.experience { color: #f59e0b; }
  .file-name.projects { color: #10b981; }
  .file-name.education { color: #8b5cf6; }
  .file-name.resume { color: #ef4444; }
  .file-name.social { color: #06b6d4; }

  .file-item:hover .file-name {
    color: #60a5fa;
  }

  .social-links {
    position: relative;
  }

  .social-icons {
    position: absolute;
    right: 0;
    top: 50%;
    transform: translateY(-50%);
    display: flex;
    gap: 0.5rem;
    opacity: 0;
    transition: opacity 0.2s ease;
  }

  .social-links:hover .social-icons {
    opacity: 1;
  }

  .social-link {
    color: #888;
    transition: color 0.2s ease;
  }

  .social-link:hover {
    color: #60a5fa;
  }

  /* Responsive adjustments */
  @media (max-width: 375px) {
    .terminal-body {
      padding: 0.75rem;
    }
    
    .file-type {
      width: 70px;
      font-size: 0.7rem;
    }
    
    .file-size {
      width: 40px;
      font-size: 0.7rem;
    }
    
    .file-date {
      width: 50px;
      font-size: 0.7rem;
    }
    
    .terminal-content {
      font-size: 0.8rem;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const fileItems = document.querySelectorAll('.file-item');
    
    fileItems.forEach(item => {
      item.addEventListener('click', (e) => {
        const path = item.getAttribute('data-path');
        const resumeUrl = item.getAttribute('data-resume-url');
        
        if (path === 'resume' && resumeUrl) {
          // Handle resume download
          e.preventDefault();
          
          // Create a temporary link to download the file
          const link = document.createElement('a');
          link.href = resumeUrl;
          link.download = 'Ryan_Dielhenn_Resume.pdf';
          link.target = '_blank';
          
          // Trigger the download
          document.body.appendChild(link);
          link.click();
          document.body.removeChild(link);
          
          // Visual feedback
          (item as HTMLElement).style.transform = 'scale(0.95)';
          setTimeout(() => {
            (item as HTMLElement).style.transform = '';
          }, 150);
        } else if (path && path.startsWith('/')) {
          // Navigate to section pages
          window.location.href = path;
        }
      });
    });
  });
</script>
