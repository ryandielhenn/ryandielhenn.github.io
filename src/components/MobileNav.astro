---
import { siteConfig } from "../config";

const hasProjects = siteConfig.projects && siteConfig.projects.length > 0;
const hasExperience = siteConfig.experience && siteConfig.experience.length > 0;
const hasEducation = siteConfig.education && siteConfig.education.length > 0;
const hasResume = siteConfig.resume;
---

<div class="mobile-nav-buttons md:hidden">
  <div class="grid grid-cols-2 gap-4 max-w-md mx-auto">
    <a
      href="/about"
      class="nav-button group col-span-2"
    >
      <div class="nav-button-content">
        <svg class="nav-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
        </svg>
        <span class="nav-text">About</span>
      </div>
    </a>
    
    {hasExperience && (
      <a
        href="/experience"
        class="nav-button group"
      >
        <div class="nav-button-content">
          <svg class="nav-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2-2v2m8 0V6a2 2 0 012 2v6a2 2 0 01-2 2H8a2 2 0 01-2-2V8a2 2 0 012-2V6" />
          </svg>
          <span class="nav-text">Experience</span>
        </div>
      </a>
    )}
    
    {hasProjects && (
      <a
        href="/projects"
        class="nav-button group"
      >
        <div class="nav-button-content">
          <svg class="nav-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
          </svg>
          <span class="nav-text">Projects</span>
        </div>
      </a>
    )}
    
    {hasEducation && (
      <a
        href="/education"
        class="nav-button group"
      >
        <div class="nav-button-content">
          <svg class="nav-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z" />
          </svg>
          <span class="nav-text">Education</span>
        </div>
      </a>
    )}
    
    {hasResume && (
      <a
        href="#"
        class="nav-button group resume-button download-button"
        id="download-resume-btn"
        data-resume-url={siteConfig.resume}
      >
        <div class="nav-button-content">
          <svg class="nav-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4" />
            <polyline points="7,10 12,15 17,10" />
            <line x1="12" y1="15" x2="12" y2="3" />
          </svg>
          <span class="nav-text">Resume</span>
        </div>
      </a>
    )}
  </div>
</div>

<style>
  .mobile-nav-buttons {
    padding: 2rem 1rem;
  }

  .nav-button {
    display: block;
    padding: 1.25rem 1rem;
    background: rgba(31, 41, 55, 0.8);
    border: 2px solid rgba(59, 130, 246, 0.3);
    border-radius: 16px;
    text-decoration: none;
    color: #e5e7eb;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
    backdrop-filter: blur(8px);
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
    min-height: 80px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .col-span-2 {
    grid-column: span 2;
    padding: 1.5rem 1.25rem;
    min-height: 90px;
  }

  .nav-button::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(59, 130, 246, 0.1), transparent);
    transition: left 0.5s ease;
  }

  .nav-button:hover::before {
    left: 100%;
  }

  .nav-button:hover {
    transform: translateY(-4px) scale(1.02);
    border-color: rgba(59, 130, 246, 0.6);
    background: rgba(31, 41, 55, 0.95);
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04), 0 0 20px rgba(59, 130, 246, 0.3);
  }

  .nav-button:active {
    transform: translateY(-2px) scale(1.01);
  }

  .nav-button-content {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    position: relative;
    z-index: 1;
    width: 100%;
    justify-content: center;
  }

  .col-span-2 .nav-button-content {
    gap: 1rem;
  }

  .nav-icon {
    width: 24px;
    height: 24px;
    flex-shrink: 0;
    color: #3b82f6;
    transition: all 0.3s ease;
  }

  .nav-text {
    font-size: 1.125rem;
    font-weight: 600;
    font-family: 'IBM Plex Mono', monospace;
    letter-spacing: -0.025em;
    transition: color 0.3s ease;
  }

  .nav-button:hover .nav-icon {
    color: #60a5fa;
    transform: scale(1.1);
  }

  .nav-button:hover .nav-text {
    color: #f3f4f6;
  }

  /* Animation for button appearance */
  .nav-button {
    opacity: 0;
    transform: translateY(20px);
    animation: slideInUp 0.6s ease-out forwards;
  }

  .nav-button:nth-child(1) { animation-delay: 0.1s; }
  .nav-button:nth-child(2) { animation-delay: 0.2s; }
  .nav-button:nth-child(3) { animation-delay: 0.3s; }
  .nav-button:nth-child(4) { animation-delay: 0.4s; }

  @keyframes slideInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Resume button special styling */
  .resume-button {
    border-color: rgba(59, 130, 246, 0.4);
    background: rgba(31, 41, 55, 0.9);
  }
  
  .resume-button:hover {
    border-color: rgba(59, 130, 246, 0.7);
    background: rgba(31, 41, 55, 1);
  }
  
  .download-button {
    border-color: rgba(34, 197, 94, 0.4);
    background: rgba(31, 41, 55, 0.9);
  }
  
  .download-button:hover {
    border-color: rgba(34, 197, 94, 0.7);
    background: rgba(31, 41, 55, 1);
  }
  
  .download-button .nav-icon {
    color: #22c55e;
  }
  
  .download-button:hover .nav-icon {
    color: #4ade80;
  }

  /* Touch feedback for mobile */
  @media (hover: none) and (pointer: coarse) {
    .nav-button:active {
      transform: scale(0.98);
      background: rgba(31, 41, 55, 1);
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const navButtons = document.querySelectorAll('.nav-button');
    
    
    // Handle resume button (download functionality)
    const resumeBtn = document.getElementById('download-resume-btn');
    if (resumeBtn) {
      resumeBtn.addEventListener('click', (e) => {
        e.preventDefault();
        
        // Get the resume URL from the data attribute
        const resumeUrl = resumeBtn.getAttribute('data-resume-url');
        
        if (!resumeUrl) return;
        
        // Create a temporary link to download the file
        const link = document.createElement('a');
        link.href = resumeUrl;
        link.download = 'Ryan_Dielhenn_Resume.pdf';
        link.target = '_blank';
        
        // Trigger the download
        document.body.appendChild(link);
        link.click();
        document.body.removeChild(link);
        
        // Visual feedback
        (resumeBtn as HTMLElement).style.transform = 'scale(0.95)';
        setTimeout(() => {
          (resumeBtn as HTMLElement).style.transform = '';
        }, 150);
      });
    }
    
    navButtons.forEach(button => {
      button.addEventListener('click', (e) => {
        const isResumeButton = button.classList.contains('resume-button');
        const isDownloadButton = button.id === 'download-resume-btn';
        
        // Only prevent default for resume download button
        if (isDownloadButton) {
          e.preventDefault();
        }
        
        // Visual feedback for all buttons
        (button as HTMLElement).style.transform = 'scale(0.95)';
        setTimeout(() => {
          (button as HTMLElement).style.transform = '';
        }, 150);
      });
    });
  });
</script>
