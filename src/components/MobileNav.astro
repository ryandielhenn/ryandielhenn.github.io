---
import { siteConfig } from "../config";

const hasProjects = siteConfig.projects && siteConfig.projects.length > 0;
const hasExperience = siteConfig.experience && siteConfig.experience.length > 0;
const hasEducation = siteConfig.education && siteConfig.education.length > 0;
const hasResume = siteConfig.resume;
---

<div class="interactive-terminal">
  <div class="terminal-window">
    <div class="terminal-header">
      <div class="terminal-buttons">
        <div class="btn close"></div>
        <div class="btn minimize"></div>
        <div class="btn maximize"></div>
      </div>
      <div class="terminal-title">portfolio@ryandielhenn:~$</div>
    </div>
    
    <div class="terminal-body">
      <!-- Root directory listing -->
      <div id="root-content" class="terminal-content">
        <div class="terminal-line">
          <span class="prompt">portfolio@ryandielhenn:~$</span>
          <span class="command">ls -la</span>
        </div>
        
        <div class="file-listing">
          <div class="file-item" data-folder="about">
            <span class="permissions">drwxr-xr-x</span>
            <span class="size">2.1K</span>
            <span class="date">Dec 15</span>
            <span class="name">about/</span>
          </div>
          
          {hasExperience && (
            <div class="file-item" data-folder="experience">
              <span class="permissions">drwxr-xr-x</span>
              <span class="size">4.2K</span>
              <span class="date">Dec 15</span>
              <span class="name">experience/</span>
            </div>
          )}
          
          {hasProjects && (
            <div class="file-item" data-folder="projects">
              <span class="permissions">drwxr-xr-x</span>
              <span class="size">3.8K</span>
              <span class="date">Dec 15</span>
              <span class="name">projects/</span>
            </div>
          )}
          
          {hasEducation && (
            <div class="file-item" data-folder="education">
              <span class="permissions">drwxr-xr-x</span>
              <span class="size">1.9K</span>
              <span class="date">Dec 15</span>
              <span class="name">education/</span>
            </div>
          )}
          
          {hasResume && (
            <div class="file-item" data-resume>
              <span class="permissions">-rw-r--r--</span>
              <span class="size">245K</span>
              <span class="date">Dec 15</span>
              <span class="name">resume.pdf</span>
            </div>
          )}
          
          <div class="file-item social">
            <span class="permissions">lrwxrwxrwx</span>
            <span class="size">-</span>
            <span class="date">Dec 15</span>
            <span class="name">social/</span>
            <div class="social-links">
              {siteConfig.social?.email && (
                <a href={`mailto:${siteConfig.social.email}`} class="social-link">
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z" />
                    <polyline points="22,6 12,13 2,6" />
                  </svg>
                </a>
              )}
              {siteConfig.social?.linkedin && (
                <a href={siteConfig.social.linkedin} target="_blank" rel="noopener noreferrer" class="social-link">
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z" />
                    <rect x="2" y="9" width="4" height="12" />
                    <circle cx="4" cy="4" r="2" />
                  </svg>
                </a>
              )}
              {siteConfig.social?.github && (
                <a href={siteConfig.social.github} target="_blank" rel="noopener noreferrer" class="social-link">
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-1.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22" />
                  </svg>
                </a>
              )}
            </div>
          </div>
        </div>
        
        <div class="terminal-line">
          <span class="prompt">portfolio@ryandielhenn:~$</span>
          <span class="cursor">_</span>
        </div>
      </div>

      <!-- About folder content -->
      <div id="about-content" class="terminal-content hidden">
        <div class="terminal-line">
          <span class="prompt">portfolio@ryandielhenn:~/about$</span>
          <span class="command">ls -la</span>
        </div>
        
        <div class="file-listing">
          <div class="file-item" data-file="bio.txt">
            <span class="permissions">-rw-r--r--</span>
            <span class="size">1.2K</span>
            <span class="date">Dec 15</span>
            <span class="name">bio.txt</span>
          </div>
          <div class="file-item" data-file="skills.txt">
            <span class="permissions">-rw-r--r--</span>
            <span class="size">856B</span>
            <span class="date">Dec 15</span>
            <span class="name">skills.txt</span>
          </div>
        </div>
        
        <div class="terminal-line">
          <span class="prompt">portfolio@ryandielhenn:~/about$</span>
          <span class="command">cat bio.txt</span>
        </div>
        
        <div class="file-content">
          <div class="simple-content">
            <h3>About Me</h3>
            <p>{siteConfig.aboutMe}</p>
            
            <h4>Skills & Technologies</h4>
            <div class="skills-list">
              {siteConfig.skills.map(skill => (
                <span class="skill-item">{skill}</span>
              ))}
            </div>
            
            <h4>Areas of Expertise</h4>
            <div class="expertise-grid">
              <div class="expertise-item">
                <h5>Distributed Systems</h5>
                <p>Experience with Apache Kafka, asynchronous communication patterns, and fault-tolerant architectures.</p>
              </div>
              <div class="expertise-item">
                <h5>Data Science</h5>
                <p>Specializing in AI, machine learning, and data analysis techniques.</p>
              </div>
              <div class="expertise-item">
                <h5>Software Engineering</h5>
                <p>Backend development with focus on scalable, maintainable code.</p>
              </div>
            </div>
          </div>
        </div>
        
        <div class="back-button-container">
          <button class="back-button" onclick="window.goBack && window.goBack()">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="m12 19-7-7 7-7"/>
              <path d="M19 12H5"/>
            </svg>
            cd ..
          </button>
        </div>
      </div>

      <!-- Experience folder content -->
      <div id="experience-content" class="terminal-content hidden">
        <div class="terminal-line">
          <span class="prompt">portfolio@ryandielhenn:~/experience$</span>
          <span class="command">ls -la</span>
        </div>
        
        <div class="file-listing">
          <div class="file-item" data-file="work-history.txt">
            <span class="permissions">-rw-r--r--</span>
            <span class="size">3.8K</span>
            <span class="date">Dec 15</span>
            <span class="name">work-history.txt</span>
          </div>
        </div>
        
        <div class="terminal-line">
          <span class="prompt">portfolio@ryandielhenn:~/experience$</span>
          <span class="command">cat work-history.txt</span>
        </div>
        
        <div class="file-content">
          <div class="simple-content">
            <h3>Experience</h3>
            <p>My professional journey in software engineering and distributed systems.</p>
            
            <div class="experience-list">
              {siteConfig.experience.map((job, index) => (
                <div class="experience-item">
                  <div class="experience-header">
                    <h4>{job.title}</h4>
                    <span class="experience-date">{job.dateRange}</span>
                  </div>
                  <h5 class="experience-company">{job.company}</h5>
                  <ul class="experience-bullets">
                    {job.bullets.map((bullet, bulletIndex) => (
                      <li>{bullet}</li>
                    ))}
                  </ul>
                </div>
              ))}
            </div>
          </div>
        </div>
        
        <div class="back-button-container">
          <button class="back-button" onclick="window.goBack && window.goBack()">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="m12 19-7-7 7-7"/>
              <path d="M19 12H5"/>
            </svg>
            cd ..
          </button>
        </div>
      </div>

      <!-- Projects folder content -->
      <div id="projects-content" class="terminal-content hidden">
        <div class="terminal-line">
          <span class="prompt">portfolio@ryandielhenn:~/projects$</span>
          <span class="command">ls -la</span>
        </div>
        
        <div class="file-listing">
          <div class="file-item" data-file="portfolio.txt">
            <span class="permissions">-rw-r--r--</span>
            <span class="size">2.9K</span>
            <span class="date">Dec 15</span>
            <span class="name">portfolio.txt</span>
          </div>
        </div>
        
        <div class="terminal-line">
          <span class="prompt">portfolio@ryandielhenn:~/projects$</span>
          <span class="command">cat portfolio.txt</span>
        </div>
        
        <div class="file-content">
          <div class="simple-content">
            <h3>Projects</h3>
            <p>A collection of my work in distributed systems, data science, and software engineering.</p>
            
            <div class="projects-list">
              {siteConfig.projects.map((project, index) => (
                <div class="project-item">
                  <div class="project-header">
                    <h4>{project.name}</h4>
                    <a href={project.link} target="_blank" rel="noopener noreferrer" class="project-link">
                      <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                        <path d="M9 19c-4.3 1.4 -4.3 -2.5 -6 -3m12 5v-3.5c0 -1 .1 -1.4 -.5 -2c2.8 -.3 5.5 -1.4 5.5 -6a4.6 4.6 0 0 0 -1.3 -3.2a4.2 4.2 0 0 0 -.1 -3.2s-1.1 -.3 -3.5 1.3a12.3 12.3 0 0 0 -6.2 0c-2.4 -1.6 -3.5 -1.3 -3.5 -1.3a4.2 4.2 0 0 0 -.1 3.2a4.6 4.6 0 0 0 -1.3 3.2c0 4.6 2.7 5.7 5.5 6c-.6 .6 -.6 1.2 -.5 2v3.5" />
                      </svg>
                    </a>
                  </div>
                  <p class="project-description">{project.description}</p>
                  <div class="project-skills">
                    {project.skills.map((skill, skillIndex) => (
                      <span class="project-skill">{skill}</span>
                    ))}
                  </div>
                </div>
              ))}
            </div>
          </div>
        </div>
        
        <div class="back-button-container">
          <button class="back-button" onclick="window.goBack && window.goBack()">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="m12 19-7-7 7-7"/>
              <path d="M19 12H5"/>
            </svg>
            cd ..
          </button>
        </div>
      </div>

      <!-- Education folder content -->
      <div id="education-content" class="terminal-content hidden">
        <div class="terminal-line">
          <span class="prompt">portfolio@ryandielhenn:~/education$</span>
          <span class="command">ls -la</span>
        </div>
        
        <div class="file-listing">
          <div class="file-item" data-file="degrees.txt">
            <span class="permissions">-rw-r--r--</span>
            <span class="size">1.5K</span>
            <span class="date">Dec 15</span>
            <span class="name">degrees.txt</span>
          </div>
        </div>
        
        <div class="terminal-line">
          <span class="prompt">portfolio@ryandielhenn:~/education$</span>
          <span class="command">cat degrees.txt</span>
        </div>
        
        <div class="file-content">
          <div class="simple-content">
            <h3>Education</h3>
            <p>My academic background and achievements.</p>
            
            <div class="education-list">
              {siteConfig.education.map((edu, index) => (
                <div class="education-item">
                  <div class="education-header">
                    <h4>{edu.degree}</h4>
                    <span class="education-date">{edu.dateRange}</span>
                  </div>
                  <h5 class="education-school">{edu.school}</h5>
                  <ul class="education-achievements">
                    {edu.achievements.map((achievement, achievementIndex) => (
                      <li>{achievement}</li>
                    ))}
                  </ul>
                </div>
              ))}
            </div>
          </div>
        </div>
        
        <div class="back-button-container">
          <button class="back-button" onclick="window.goBack && window.goBack()">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="m12 19-7-7 7-7"/>
              <path d="M19 12H5"/>
            </svg>
            cd ..
          </button>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .interactive-terminal {
    width: 100%;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  /* Desktop styles */
  @media (min-width: 768px) {
    .interactive-terminal {
      width: 100%;
      padding: 2rem 2rem;
    }
    
    .terminal-window {
      box-shadow: 0 12px 48px rgba(0, 0, 0, 0.4);
      min-height: 80vh;
    }
    
    .terminal-body {
      padding: 3rem;
      min-height: 75vh;
    }
  }

  .terminal-window {
    background: #1a1a1a;
    border-radius: 8px;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
    overflow: hidden;
    font-family: 'IBM Plex Mono', monospace;
    border: 1px solid #333;
  }

  .terminal-header {
    background: #2d2d2d;
    padding: 0.75rem 1rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
    border-bottom: 1px solid #333;
  }

  .terminal-buttons {
    display: flex;
    gap: 0.5rem;
  }

  .btn {
    width: 12px;
    height: 12px;
    border-radius: 50%;
  }

  .btn.close { background: #ff5f56; }
  .btn.minimize { background: #ffbd2e; }
  .btn.maximize { background: #27ca3f; }

  .terminal-title {
    color: #888;
    font-size: 0.875rem;
    font-weight: 500;
  }

  .terminal-body {
    background: #1a1a1a;
    padding: 1.5rem;
    min-height: 500px;
    max-height: 70vh;
    overflow-y: auto;
  }

  .terminal-content {
    color: #e5e7eb;
    font-size: 0.875rem;
    line-height: 1.5;
  }

  .terminal-content.hidden {
    display: none;
  }

  .terminal-line {
    margin-bottom: 0.5rem;
    display: flex;
    align-items: center;
    flex-wrap: wrap;
  }

  .prompt {
    color: #22c55e;
    font-weight: 600;
    margin-right: 0.5rem;
  }

  .command {
    color: #60a5fa;
    font-weight: 500;
  }

  .output {
    color: #e5e7eb;
    font-style: italic;
  }

  .back-button-container {
    margin-top: 2rem;
    padding: 1rem 0;
    text-align: center;
  }

  .back-button {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    background: #2d2d2d;
    color: #e5e7eb;
    border: 1px solid #444;
    border-radius: 6px;
    font-family: 'IBM Plex Mono', monospace;
    font-size: 0.875rem;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .back-button:hover {
    background: #3d3d3d;
    border-color: #555;
    color: #f3f4f6;
    transform: translateY(-1px);
  }

  .back-button:active {
    transform: translateY(0);
  }

  .cursor {
    color: #22c55e;
    animation: blink 1s infinite;
  }

  @keyframes blink {
    0%, 50% { opacity: 1; }
    51%, 100% { opacity: 0; }
  }

  .file-listing {
    margin: 1rem 0;
  }

  .file-item {
    display: flex;
    align-items: center;
    padding: 0.5rem 0;
    cursor: pointer;
    border-radius: 4px;
    transition: all 0.2s ease;
    margin-bottom: 0.25rem;
  }

  .file-item:hover {
    background: rgba(59, 130, 246, 0.1);
    transform: translateX(4px);
  }

  .permissions {
    color: #888;
    width: 80px;
    font-size: 0.75rem;
    margin-right: 1rem;
  }

  .size {
    color: #888;
    width: 50px;
    font-size: 0.75rem;
    margin-right: 1rem;
    text-align: right;
  }

  .date {
    color: #888;
    width: 60px;
    font-size: 0.75rem;
    margin-right: 1rem;
  }

  .name {
    color: #e5e7eb;
    font-weight: 500;
    flex: 1;
  }

  .file-item[data-folder="about"] .name { color: #3b82f6; }
  .file-item[data-folder="experience"] .name { color: #f59e0b; }
  .file-item[data-folder="projects"] .name { color: #10b981; }
  .file-item[data-folder="education"] .name { color: #8b5cf6; }
  .file-item[data-resume] .name { color: #ef4444; }
  .file-item.social .name { color: #06b6d4; }

  .social-links {
    position: absolute;
    right: 0;
    top: 50%;
    transform: translateY(-50%);
    display: flex;
    gap: 0.5rem;
    opacity: 0;
    transition: opacity 0.2s ease;
  }

  .file-item.social:hover .social-links {
    opacity: 1;
  }

  .social-link {
    color: #888;
    transition: color 0.2s ease;
  }

  .social-link:hover {
    color: #60a5fa;
  }

  .file-content {
    margin: 1rem 0;
    padding: 1rem;
    background: rgba(0, 0, 0, 0.2);
    border-radius: 4px;
    border-left: 3px solid #22c55e;
  }

  .simple-content {
    padding: 1rem;
    color: #e5e7eb;
    line-height: 1.6;
  }

  .simple-content h3 {
    color: #e5e7eb;
    font-size: 1.25rem;
    margin-bottom: 1rem;
    margin-top: 0;
  }

  .simple-content h4 {
    color: #e5e7eb;
    font-size: 1.1rem;
    margin-bottom: 0.75rem;
    margin-top: 1.5rem;
  }

  .simple-content h5 {
    color: #e5e7eb;
    font-size: 1rem;
    margin-bottom: 0.5rem;
    margin-top: 0;
  }

  .simple-content p {
    margin: 0 0 1rem 0;
    color: #9ca3af;
  }

  .skills-list {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 1rem;
  }

  .skill-item {
    background: #374151;
    color: #e5e7eb;
    padding: 0.25rem 0.75rem;
    border-radius: 4px;
    font-size: 0.875rem;
  }

  .expertise-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1rem;
  }

  .expertise-item {
    background: rgba(0, 0, 0, 0.2);
    padding: 1rem;
    border-radius: 4px;
    border-left: 3px solid #22c55e;
  }

  .expertise-item p {
    margin: 0;
    font-size: 0.9rem;
  }

  .experience-list {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    margin-top: 1rem;
  }

  .experience-item {
    background: rgba(0, 0, 0, 0.2);
    padding: 1.5rem;
    border-radius: 4px;
    border-left: 3px solid #22c55e;
  }

  .experience-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 0.5rem;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .experience-header h4 {
    color: #e5e7eb;
    font-size: 1.1rem;
    margin: 0;
    flex: 1;
    min-width: 200px;
  }

  .experience-date {
    color: #9ca3af;
    font-size: 0.875rem;
    white-space: nowrap;
  }

  .experience-company {
    color: #22c55e;
    font-size: 1rem;
    margin: 0 0 1rem 0;
    font-weight: 600;
  }

  .experience-bullets {
    margin: 0;
    padding-left: 1rem;
  }

  .experience-bullets li {
    color: #9ca3af;
    margin-bottom: 0.5rem;
    line-height: 1.5;
    position: relative;
  }

  .experience-bullets li::before {
    content: "•";
    color: #22c55e;
    position: absolute;
    left: -1rem;
  }

  .projects-list {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    margin-top: 1rem;
  }

  .project-item {
    background: rgba(0, 0, 0, 0.2);
    padding: 1.5rem;
    border-radius: 4px;
    border-left: 3px solid #22c55e;
  }

  .project-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 1rem;
    gap: 1rem;
  }

  .project-header h4 {
    color: #e5e7eb;
    font-size: 1.1rem;
    margin: 0;
    flex: 1;
  }

  .project-link {
    color: #22c55e;
    text-decoration: none;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 32px;
    height: 32px;
    background: rgba(34, 197, 94, 0.1);
    border-radius: 4px;
    transition: all 0.2s ease;
    flex-shrink: 0;
  }

  .project-link:hover {
    background: rgba(34, 197, 94, 0.2);
    transform: scale(1.05);
  }

  .project-description {
    color: #9ca3af;
    margin: 0 0 1rem 0;
    line-height: 1.6;
    font-size: 0.9rem;
  }

  .project-skills {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .project-skill {
    background: #374151;
    color: #e5e7eb;
    padding: 0.25rem 0.75rem;
    border-radius: 4px;
    font-size: 0.8rem;
    border: 1px solid #4b5563;
  }

  .education-list {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
